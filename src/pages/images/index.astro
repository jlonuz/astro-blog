---

import { Image, Picture } from 'astro:assets';
import MainLayout from "src/layouts/MainLayout.astro";

import post05 from '@images/post-05.png';
---

<MainLayout title="Imágenes">
    <h1 class="text-5xl text-white">Imágenes</h1>

    <img
        loading="eager"
        src="/assets/images/post-05.png"
        width="250"
        height="250"
    >
    <Image
        src={post05}
        alt="Imagen del post"
        width="250"
        height="250"
    />

    <h1>Quality Low</h1>
    <Image
        quality="low"
        src={post05}
        alt="Imagen del post"
        width="250"
        height="250"
    />
    <h1>Quality HIGH</h1>
    <Image
        quality="high"
        src={post05}
        alt="Imagen del post"
        width="250"
        height="250"
    />
    <h1>Formatos</h1>
    <Image
        format="jpg"
        src={post05}
        alt="Imagen del post"
        width="250"
        height="250"
    />
    <h1>Pictures</h1>

    <!-- formats={['webp', 'jpeg', 'png']} -->
    <!-- widths={[240, 540, 720, post05.width]}
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05.width}px`} -->
    <Picture
        src={post05}
        alt="Imagen del post"
        width="250"
        height="250"
    />


    <div style={{ height: '3000px'}}></div>

    <img
        loading="eager"
        src="/assets/images/post-02.png"
        width="250"
        height="250"
    >
</MainLayout>

<style>
    h1 {
        @apply  text-white mt-10
    }
</style>