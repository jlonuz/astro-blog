---
import { getCollection } from "astro:content";
import { siteConfig } from "../config/site-config";
import MainLayout from "../layouts/MainLayout.astro";
import TypedBlogPost from "../components/TypedBlogPost.astro";

const blogPosts = await getCollection('blog');

---

<MainLayout title="Josefina's blog">
	<!-- component -->
<section class="text-white">
    <div class="container px-6 py-10 mx-auto">
        <h1 class="text-3xl font-semibold capitalize lg:text-4xl text-white">{ siteConfig.title}</h1>

        <a class="text-blue-500 hover:underline mr-2" href="/blog/1">Blog paginado</a>
        <a class="text-blue-500 hover:underline mr-2" href="/authors">Autores</a>

        <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
			{
                blogPosts.map((post) =>  <TypedBlogPost post={post}/>)
            }
        </div>
    </div>
</section>
</MainLayout>
